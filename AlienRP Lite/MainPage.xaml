        <Border UseLayoutRounding="True" Grid.Row="1">
            <Border VerticalAlignment="Center">
                <StackPanel Width="350">
                    <TextBlock Text="LOGIN" Margin="0, 0, 0, 12"  HorizontalAlignment="Center" FontFamily="{StaticResource FontRegular}" Foreground="{StaticResource LightFontColor1}" FontSize="20" />
